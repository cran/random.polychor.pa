citHeader("To cite package ‘random.polychor.pa’ in publications use:")
     
     year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
     vers <- paste("R package version", meta$Version)
     
     bibentry(bibtype = "Manual",
              title = "random.polychor.pa: A Parallel Analysis with Polychoric Correlation Matrices",
              author = c(as.person("Fabio Presaghi"),
                         as.person("Marta Desimoni")),
              address = "Department of Social and Developmental Psychology, Sapienza University, Rome, Italy",
              year = year,
              note = vers,
     
              textVersion =
              paste("Fabio Presaghi and Marta Desimoni",
                    "(", year,
                    "). random.polychor.pa: A Parallel Analysis With Polychoric Correlation Matrices. ",
                    vers, ".", sep=""))

